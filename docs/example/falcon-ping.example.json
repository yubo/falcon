{
    "debug":true,
    "metric":"host-ping",
    "tag":"hfrom=%s",
    "http": {
        "enabled": true,
        "listen": "%%PING_HTTP%%",
        "addr": "http://%%PING_HTTP%%/ping/hostnames"
    },
    "mysql": {
        "addr": "%%DB_HOSTINFO%%?charset=utf8&&loc=Asia%2FShanghai",
        "idle": 20,
        "max": 100,
        "show_sql": false,
        "interval": 60
    },
    "norns": {
        "addr": "http://%%NORNS_HTTP%%/api/v1/tagstring/cop.xiaomi/hostnames",
        "interval": 120
    },
    "push": {      
        "addr": "http://%%AGENT_HTTP%%/v1/push",
        "interval": 60
    },
    "filter": {
        "white": true,
        "white_match": "c3,bj",
        "black_match": ["c3,bj","fr1,awsde","hh,bj","lg,bj","or1,awsus","sgp1,awssgp","sh1,azcn","zc,bj","tj,kscn","or2,awsus"]
    }
}
